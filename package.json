{
  "name": "sky-toolkit-core",
  "version": "0.1.6",
  "description": "The core framework of Sky's web toolkit",
  "main": "index.js",
  "scripts": {
    "test": "./node_modules/mocha/bin/mocha ./test/sass.js",
    "lint": "stylelint ./**/*.scss --syntax scss",
    "build": "cat _all.scss | node-sass --include-path node_modules/ --output-style compressed --precision 9 > dist/core.css",
    "build-circle": "mkdir dist && npm run build"
  },
  "pre-commit": [
    "lint",
    "test"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sky-uk/toolkit-core.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/sky-uk/toolkit-core/issues"
  },
  "homepage": "https://github.com/sky-uk/toolkit-core#readme",
  "dependencies": {
    "sass-mq": "^3.2.6"
  },
  "orion": {
    "default": {
      "stylesheet": "dist/core.css"
    }
  },
  "devDependencies": {
    "mocha": "^2.4.5",
    "node-sass": "^3.4.2",
    "pre-commit": "^1.1.2",
    "sass-true": "^2.0.3",
    "stylelint": "^5.2.1",
    "stylelint-selector-bem-pattern": "^0.2.1",
    "stylelint-statement-max-nesting-depth": "^2.0.1"
  }
}
